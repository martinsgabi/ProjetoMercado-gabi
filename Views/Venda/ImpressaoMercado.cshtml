@model ProjetoMercado.Models.Venda

@{
    ViewData["Title"] = "ImpressaoMercado";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/ProjetoMercado.styles.css" asp-append-version="true" />
<div class="caixa">
<div>

    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.vendedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vendedor.NomeVendedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pagamento.FormaDePagamento)
        </dd>
    </dl>
</div>
</div>
<table class="table">
    <thead>
        <tr>
            <hr />
            <th>
                <h3>Produtos do mercado</h3>
            </th>
            <th></th>
            <th>
                <h3>Quantidade de produto</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProdutosList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.NomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.QntEstoqueProduto)
                </td>
            </tr>

        }
    </tbody>
</table>

<br />
<br />




